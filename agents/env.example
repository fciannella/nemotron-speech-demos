# Modern Pipeline Configuration
# Copy this to .env and fill in your values

# ============================================================
# Required: NVIDIA API Key
# ============================================================
NVIDIA_API_KEY=nvapi-your-nvidia-api-key-here
NVIDIA_ASR_API_KEY=nvapi-your-nvidia-asr-api-key-here
NVIDIA_TTS_API_KEY=nvapi-your-nvidia-tts-api-key-here

# ============================================================
# LangGraph Configuration
# ============================================================
LANGGRAPH_BASE_URL=http://langgraph:2024
LANGGRAPH_ASSISTANT=simple_agent
LANGGRAPH_STREAM_MODE=values
LANGGRAPH_DEBUG_STREAM=false
USER_EMAIL=test@example.com

# ============================================================
# NVIDIA Riva STT (Speech-to-Text) - MULTI
# ============================================================
NVIDIA_ASR_FUNCTION_ID=your-asr-function-id-here
RIVA_ASR_MODEL=parakeet-rnnt-1.1b-unified-ml-cs-universal-multi-asr-streaming
RIVA_ASR_LANGUAGE=multi
RIVA_ASR_AUTO_PUNCTUATION=true
RIVA_ASR_PROFANITY_FILTER=false

# ============================================================
# NVIDIA Riva TTS (Text-to-Speech)
# ============================================================
NVIDIA_TTS_FUNCTION_ID=your-tts-function-id-here
RIVA_TTS_MODEL=magpie_tts_ensemble-Magpie-Multilingual
RIVA_TTS_LANGUAGE=multi
RIVA_TTS_QUALITY=20

# ============================================================
# Audio Configuration
# ============================================================
AUDIO_SAMPLE_RATE=16000

# ============================================================
# Optional: Advanced Features
# ============================================================
# ZERO_SHOT_AUDIO_PROMPT=/path/to/voice_sample.wav
# IPA_DICT_FILE=/path/to/ipa.json
# EXCLUDE_ASSISTANTS=healthcare-agent

# ============================================================
# Optional: Twilio TURN (for production)
# ============================================================
# TWILIO_ACCOUNT_SID=your-sid
# TWILIO_AUTH_TOKEN=your-token

# ============================================================
# Claims Investigation Agent (Twilio Voice Calls)
# ============================================================
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=+15551234567
# SERVER_URL=https://your-domain.com
# CLAIMS_LANGGRAPH_URL=http://langgraph:2024
# CLAIMS_DEFAULT_ASSISTANT=fraud-notification-agent
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Wire Transfer Security (optional)
# WIRE_TRANSFER_STRICT_VERIFICATION=false

# ============================================================
# LLM Configuration
# ============================================================
USE_SIMPLE_LLM=false
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
SYSTEM_PROMPT=You are a helpful AI voice assistant.
TRANSCRIPTION_LOGGING=true
